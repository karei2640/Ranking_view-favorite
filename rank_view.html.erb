 #view_countsのそれぞれのランキング表示
  <% if params[:ranking_period] == 'all' %>
    <%= name.view_counts.count %>
  <% elsif params[:ranking_period] == 'monthly' %>
    <%= name.view_counts.where(created_at: Time.current.all_month).count %>
  <% elsif params[:ranking_period] == 'weekly' %>
    <%= name.view_counts.where(created_at: Time.current.all_week).count %>
  <% else params[:ranking_period] == 'daily'%>
    <%= name.view_counts.where(created_at: Time.zone.now.all_day).count %>
  <% end %>
  
